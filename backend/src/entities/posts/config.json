{
  "entityName": "posts",
  "collectionName": "posts",
  "apiKey": "slug",
  "schema": {
    "required": [
      "user",
      "title",
      "slug",
      "body",
      "market"
    ],
    "properties": {
      "user": {
        "$ref": "#user",
        "readOnly": true
      },
      "title": {
        "type": "string",
        "maxLength": 150
      },
      "slug": {
        "format": "eval:{slug(this.title)}-{randomChars(8)}",
        "readOnly": true
      },
      "body": {
        "type": "string",
        "maxLength": 30000
      },
      "market": {
        "$ref": "#entity/market",
        "readOnly": true
      },
      "numberOfComments": {
        "type": "integer",
        "default": 0
      },
      "votes": {
        "type": "integer",
        "default": 0
      },
      "smImageUrl": {
        "type": "string"
      },
      "lgImageUrl": {
        "type": "string"
      },
      "pinnedUntil": {
        "type": "object",
        "format": "date-time"
      }
    }
  },
  "permissions": {
    "get": "anyone",
    "create": "anyone",
    "update": "own",
    "delete": "own",
    "properties": {
      "user": {
        "create": "system",
        "update": "system"
      },
      "market": {
        "update": "system"
      },
      "numberOfComments": {
        "create": "system",
        "update": "system"
      },
      "votes": {
        "create": "system",
        "update": "system"
      }
    }
  },
  "indexes": [
    {
      "keys": {
        "user": 1
      }
    },
    {
      "keys": {
        "slug": 1
      },
      "unique": true
    },
    {
      "keys": {
        "market": 1
      }
    },
    {
      "keys": {
        "pinnedUntil": 1
      },
      "sparse": true
    }
  ],
  "hooks": {
    "afterCreate": [
      {
        "action": "increment",
        "target": "this.user.numberOfPosts",
        "value": 1
      },
      {
        "action": "increment",
        "target": "this.market.numberOfPosts",
        "value": 1
      }
    ],
    "afterDelete": [
      {
        "action": "increment",
        "target": "this.user.numberOfPosts",
        "value": -1
      },
      {
        "action": "increment",
        "target": "this.market.numberOfPosts",
        "value": -1
      }
    ]
  },
  "joinProperties": {
    "viewerVote": {
      "type": "findOne",
      "entity": "postVotes",
      "query": {
        "user": "{user.id}",
        "post": "{this.id}"
      }
    }
  }
}
